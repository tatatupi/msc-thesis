Format 35
Input stdclass.inc
Input numreport.inc

Style Standard
	Category              MainText
	Margin                Static
	LatexType             Paragraph
	LatexName             dummy
	ParIndent             MM
	Parsep                0.4
	Spacing               onehalf
	Align                 Block
	AlignPossible         Block, Left, Right, Center
	LabelType             No_Label
	# FIXME This ought to be set dynamically.
	HTMLStyle
		div.standard {
			margin-bottom: 2ex;
		}
	EndHTMLStyle
End


Style Bibliography
	TopSep                4
	LabelString           "Bibliography"
	LabelFont
	  Series              Bold
	  Size                Huge
	EndFont
End

Style Title
	Margin                Static
	LatexType             Command
	Category              FrontMatter
	InTitle               1
	LatexName             titulo
	ParSkip               0.4
	ItemSep               0
	TopSep                0
	BottomSep             1
	ParSep                1
	Align                 Center
	LabelType             No_Label
	Font
	  Size                Largest
	EndFont
	HTMLTag               h1
	HTMLTitle             true
End


Style Author
	Margin                Static
	LatexType             Command
	Category              FrontMatter
	InTitle               1
	LatexName             autor
	LabelSep              xxx
	ParSkip               0.4
	TopSep                1.3
	BottomSep             0.7
	ParSep                0.7
	Align                 Center
	LabelType             No_Label
	Font
	  Size                Large
	EndFont
End


Style Date
	Margin                Dynamic
	LatexType             Command
	Category              FrontMatter
	InTitle               1
	LatexName             data
	LabelSep              xxx
	ParSkip               0.4
	TopSep                0.9
	BottomSep             0.5
	ParSep                1
	Align                 Center
	LabelType             No_Label
	Font
	  Size                Large
	EndFont
End

Style Orientador
	LatexType	Command
	LatexName	orientador
	Category	FrontMatter
	InTitle		1
	LabelType	Static
	LabelString	"Orientador(a): "
	OptionalArgs	1
	Align		Center
	Font
	  Size                Large
	EndFont
	LabelFont
	  Color		Green
	  Size		normal
	EndFont
End

Style "Co-orientador"
	CopyStyle	Orientador
	LatexName	coorientador
	LabelString	"Co-orientador(a): "
End

Style "Area de Concentracao"
	LatexType	Command
	LatexName	areaconcentracao
	Category	FrontMatter
	inTitle		1
	LabelType	Static
	LabelString	"Area de Concentracao: "
	Align		Center
	Font
	  Size                Large
	EndFont
	LabelFont
	  Color		Green
	  Size		normal
	EndFont
End

Style Dedicatoria
	LatexType	Command
	LatexName	dedicatoria
	Category	FrontMatter
	LabelType	Top_Environment
	LabelString	"Dedicatoria"
	Align		left
	Margin		Dynamic
	TopSep                0.9
	BottomSep             0.5
	LabelFont
	  Size          large
	  Series        Bold
	EndFont
End

Style Agradecimentos
	Margin		Dynamic
	LatexType	Environment
	LatexName	agradecimentos
	Category	FrontMatter
	TopSep                0.9
	BottomSep             0.5
	LabelType	Centered_Top_Environment
	LabelString	"Agradecimentos"
	LabelFont
	  Size		larger
	  Series	Bold
	EndFont
End

Style Epigrafe
	LatexType	Environment
	LatexName	leepigrafe
	Category	FrontMatter
	Align		Right
	Margin		Dynamic
	TopSep                0.9
	BottomSep             0.5
	RightMargin	"MMM"
End

InsetLayout Flex:Texto da Epigrafe
  	Decoration	Conglomerate
	Font
		Shape	Italic
	EndFont
	LabelString	"Texto da Epigrafe"
	LabelFont
		Color	Green
		Shape	Italic
	EndFont
	LatexName	letextodaepigrafe
	LatexType	Command
	LyxType		custom	
End

InsetLayout Flex:Autor da Epigrafe
  	Decoration	Conglomerate
	LabelString	"Autor da Epigrafe"
	LabelFont
		Color	Green
		Shape	Italic
	EndFont
	LatexName	leautordaepigrafe
	LatexType	Command
	LyxType		custom
End

Style Resumo_em_Portugues
	CopyStyle	Abstract
	LatexName	resumo
End

Style Palavras_chave_em_portugues
	LatexType	Command
	LatexName	palavraschave
	Category	FrontMatter
	Align		left
	TopSep                0.9
	Margin		Dynamic
	LabelType	Static
	LabelString	"Palavras-chave: "
	LabelFont
	  Series	Bold
	EndFont
End

Style Keywords
	CopyStyle	Palavras_chave_em_portugues
	LatexName	keywords
	LabelString	"Keywords: "
End

NoStyle Address
NoStyle Right_Address

Style "Resumo Capitulo"
	LatexType	Environment
	LatexName	resumocap
	TopSep                0.5
	BottomSep             1.0
	LabelType	No_Label
	Align		Block
	LeftMargin	"MMMM"
	ParIndent	"0"
	RightMargin	"MMMM"
	Font
		Shape	Italic
		Size	small
	EndFont
End
